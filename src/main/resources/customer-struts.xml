<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.configuration.xml.reload" value="true" /><!-- 
		设置成开发者模式 -->

	<constant name="struts.i18n.encoding" value="utf8"></constant>
	<constant name="struts.objectFactory" value="spring" />
	<!-- 管理员 -->
	<package name="customer" extends="struts-default,json-default" namespace="/customer" strict-method-invocation="false">
		<action name="customer_*" class="com.future.order.action.customer.GetAction" method="{1}">
			<result name="ingredient">/WEB-INF/customer/menu1.jsp</result>			
			<result name="menu">/WEB-INF/customer/menuMaterial.jsp</result>
			<result name="getMenu">/WEB-INF/customer/menu.jsp</result>
			<result name="getOrder">/WEB-INF/customer/order.jsp</result>
			<result name="getMenuMaterial">/WEB-INF/customer/menuMaterial.jsp</result>
		</action>
		<action name="enter">
			<result>/WEB-INF/customer/index.jsp</result>
		</action>
	</package>
	 
</struts>